<section class="custom-banner">
    <div class="banner-header">
        <!-- Logo -->
        <div class="logo">
          {% if section.settings.logo != blank %}
            <img 
              src="{{ section.settings.logo |  image_url: 'master' }}" 
              alt="Tisso Vison" 
              width="151.44" 
              height="19"
            >
          {% else %}
            <img src="{{ 'default-logo.png' | asset_url }}" alt="Tisso Vison logo" width="151.44" height="19">
          {% endif %}
        </div>
        <!-- Header -->
        <div class="p-banner">
            <p>{{ section.settings.header_text }}</p>
        </div>
        <!-- Choose Gift Button -->
        <div class="btn">
            <a href="{{ section.settings.btn_1_link }}" class="button" id="choose-gift">
              <p>{{ section.settings.button_1_text }}</p>
              <svg class="arrow-icon" width="27" height="12" viewBox="0 0 27 12" xmlns="http://www.w3.org/2000/svg">
                <path d="M1 5.25C0.585786 5.25 0.25 5.58579 0.25 6C0.25 6.41421 0.585786 6.75 1 6.75L1 5.25ZM26.5303 6.53033C26.8232 6.23743 26.8232 5.76256 26.5303 5.46967L21.7574 0.696697C21.4645 0.403804 20.9896 0.403804 20.6967 0.696697C20.4038 0.989591 20.4038 1.46446 20.6967 1.75736L24.9393 6L20.6967 10.2426C20.4038 10.5355 20.4038 11.0104 20.6967 11.3033C20.9896 11.5962 21.4645 11.5962 21.7574 11.3033L26.5303 6.53033ZM1 6.75L26 6.75L26 5.25L1 5.25L1 6.75Z" fill="currentColor"/>
              </svg>
            </a>
        </div>
    </div>
</section>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,100..900;1,100..900&display=swap');
  * {
    font-family: 'Jost';
  }

  /* Main container for the custom banner */
  .custom-banner {
    background-color: #f5f5f5;
    padding: 20px 0;
  }
  
  /* Container that holds content */
  .banner-header {
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  /* Logo */
  .logo {
    padding: 0 16px;
  }
  .logo img {
    width: 151.44px;
    height: 19px;
  }

  /* Header Text */
  .p-banner {
    font-size: 16px;
    color: #000;
    text-align: center;
    flex: 1;
    padding: 0 20px;
    letter-spacing: 0.5px;
  }

  /* Button Choose Gift */
  .btn {
    padding: 0 16px;
  }
  .button {
    display: flex;
    align-items: center;
    gap: 10px;

    background-color: #fff544;
    padding: 4px 24px;
    text-align: center;
    line-height: 1;
    cursor: pointer;
    
    background: linear-gradient(to right, #000 50%, #fff544 50%);
    background-size: 200% 100%;
    background-position: right bottom;
    transition: all .5s ease-out;
  }
  .button:hover {
    background-position: left bottom;
  }

  .btn a {
    color: #000;
    font-size: 16px;
    font-weight: 500;
    text-transform: uppercase;
    text-decoration: none;
    vertical-align: middle;
    transition: all .6s ease-out;
  }
  .btn a:hover {
    color: #fff;
  }
  .btn a .arrow-icon {
    color: #000;
  }
  .btn a:hover .arrow-icon {
    color: #fff;
  }
  #choose-gift::before,
  #choose-gift::after {
    content: none;
    border: none;
    outline: none;
    display: none;
  }

  @media screen and (max-width: 768px) {
    .banner-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .p-banner {
      text-align: left;
      margin-top: 10px;
    }

    .btn {
      margin-top: 10px;
    }
  }
</style>

{% schema %}
{
    "name": "Custom Banner",
    "settings": [
          {
            "type": "image_picker",
            "id": "logo",
            "label": "Logo"
          },
          {
            "type": "text",
            "id": "header_text",
            "label": "Header Text",
            "default": "Find the ideal gift for your loved ones."
          },
          {
            "type": "url",
            "id": "btn_1_link",
            "label": "Button Link"
          },
          {
            "type": "text",
            "id": "button_1_text",
            "label": "Button Text",
            "default": "Choose Gift"
          }
        ],
        "presets": [
            {
                "name": "Custom Banner"
            }
        ]
}
{% endschema %}