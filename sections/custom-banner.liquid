<section class="custom-banner">
    <div class="banner-header">
        <!-- Logo -->
        <div class="logo">
            <img src="{{ section.settings.logo |  asset_url }}" alt="Tisso Vison" width="151.44" height="19">
        </div>
        <!-- Header -->
        <div class="p-banner">
            <p>{{ section.settings.header_text }}</p>
        </div>
        <!-- Choose Gift Button -->
        <div class="btn">
            <a href="{{ section.settings.btn_1_link }}" class="button" id="choose-gift">{{ section.settings.button_1_text }}</a>
        </div>
    </div>
</section>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,100..900;1,100..900&display=swap');
  * {
    font-family: 'Jost';
  }

  /* Main container for the custom banner */
  .custom-banner {
    background-color: #f5f5f5;
    padding: 20px 0;
  }
  
  /* Container that holds content */
  .banner-header {
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  /* Logo */
  .logo img {
    width: 151.44px;
    height: 19px;
  }

  /* Header Text */
  .p-banner {
    font-size: 16px;
    color: #000;
    text-align: center;
    flex: 1;
    padding: 0 20px;
    letter-spacing: 0.5px;
  }

  /* Button Choose Gift */
  .btn #choose-gift {
    background-color: #fff544;
    color: #000;
    font-size: 16px;
    font-weight: 400;
    text-transform: uppercase;
    border-radius: 4px;
    text-decoration: none;
    /* transition: background-color 0.3s ease; */
    display: inline-block;
  }

  @media screen and (max-width: 768px) {
    .banner-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .p-banner {
      text-align: left;
      margin-top: 10px;
    }

    .btn {
      margin-top: 10px;
    }
  }
</style>

{% schema %}
{
    "name": "Custom Banner",
    "settings": [
          {
            "type": "image_picker",
            "id": "logo",
            "label": "Logo"
          },
          {
            "type": "text",
            "id": "header_text",
            "label": "Header Text",
            "default": "Find the ideal gift for your loved ones."
          },
          {
            "type": "url",
            "id": "btn_1_link",
            "label": "Button Link"
          },
          {
            "type": "text",
            "id": "btn_1_text",
            "label": "Button Text",
            "default": "Choose Gift"
          }
        ],
        "presets": [
            {
                "name": "Custom Banner"
            }
        ]
}
{% endschema %}